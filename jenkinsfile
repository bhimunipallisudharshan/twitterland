pipeline{
    agent {
        node {
            label "javabuildserver2"
        }
    }
    environment {
        PATH = "/opt/apache-maven-3.8.7/bin:$PATH"
    }
    stages {
        stage('build') {
            steps{
                sh 'mvn clean deploy'
        }
      }
       stage ("Sonar Analysis") {
            environment {
               scannerHome = tool 'sonarqube scanner'
            }
            steps {
                withSonarQubeEnv('sonarqube server') {    
                    sh "${scannerHome}/bin/sonar-scanner"

                }    
               
            }   
        }
           
    }   
 }

